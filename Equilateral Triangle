#include<stdio.h>
void main()
{
int i,j,n;
void input()
{
  printf("enter the number of rows\n");
  scanf("%d",&n);
}
void print_triangle()
{
for(i=1;i<=n;i++)
{
   for(j=i;j<n;j++)
   {
   printf(" ");
   }
   for(j=1;j<=(2*i-1);j++)
   {
   printf("*");
   }
   printf("\n");
} 
}
input();
print_triangle();

}
